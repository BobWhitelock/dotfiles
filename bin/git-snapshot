#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

snapshot_name="${1:-}"

current_branch="$(git rev-parse --abbrev-ref HEAD)"
timestamp="$(date +%Y-%m-%d_%H-%M)"

if [[ -n "$snapshot_name" ]]; then
  snapshot_branch="snapshot/$snapshot_name/$timestamp"
else
  snapshot_branch="snapshot/$timestamp"
fi

(
if [ -z "$(git status --porcelain)" ]; then
  # Just create the branch if nothing to commit.
  git branch -f "$snapshot_branch"
else
  git checkout -B "$snapshot_branch"
  git add .
  git commit -m "Snapshot" --no-verify
  git branch -f "$current_branch"
  git checkout -
  git reset HEAD~
fi
) > /dev/null
