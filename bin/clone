#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

# Clone a GitHub repo into standard directory structure, then create Tmux
# window for new repo.

main() {
    local repo_identifier owner name repo owner_path

    # Can be URL or just `owner/name`.
    repo_identifier="$1"

    owner="$(basename "$(dirname "$repo_identifier")")"
    name="$(basename "$repo_identifier")"

    # Standardize repo name so `hub` can figure out method should use to clone;
    # avoids being unnecessarily prompted for password.
    repo="$owner/$name"

    owner_path="$SRC/$owner"
    mkdir -p "$owner_path"
    cd "$owner_path"

    # XXX This script doesn't work correctly for URLs like
    # `git@github.com:alces-software/flight-blueprint.git` - this test will
    # always pass, `hub clone` will then fail if it has already been cloned,
    # and `add_window` below will fail as there is no `flight-blueprint.git`
    # dir.
    if [ ! -d "$name" ]; then
        hub clone "$repo"
    fi

    # shellcheck disable=SC1090
    source "$ZSH_LIB/tmux.sh"
    add_window --vim-pane "$name"
}

main "$@"
