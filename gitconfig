[user]
	name = Bob Whitelock
	email = bob.whitelock1@gmail.com

[core]
	pager = less -FRSX
	excludesfile = ~/.gitignore

[push]
	default = current

[credential]
	helper = cache --timeout=3600

[alias]
	amend = commit --verbose --amend -C HEAD
	amend-and-edit = commit --verbose --amend
	sed = ! git grep -z --full-name -l '.' | xargs -0 sed -i -e
	fix-conflicts = ! $EDITOR $(git diff --name-only | uniq)
	pull-submodules = submodule foreach git pull
	update-submodules = "! git stash save && git pull-submodules && git commit -am 'Update submodules'; git stash apply"
	snapshot = snapshot
	clear-snapshots = clear-snapshots
	revisions = log --oneline --follow --
	history = log -p --follow --
	add-deleted = ! git rm $(git ls-files --deleted)
	tracked-files = ls-tree --full-tree -r HEAD
	ls-revisions = ls-revisions
	churn = effort
	summary = summary
	delete-submodule = delete-submodule
	delete-remote = push origin --delete
	longest = longest
	cloc = cloc
	cloc-children = cloc-children
	own-files = own-files
	ctags = !.git/hooks/ctags
	review = log -p
	delete-branch = delete-branch
	; From https://stackoverflow.com/a/21857717.
	cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d"
	pop = reset HEAD~
	discard = reset --hard HEAD~
	just-index = stash save --keep-index
	wip = ! git add . && git commit -m WIP
	about = ! git summary && git cloc
	discard-unresolved = discard-unresolved
	diff-since=diff-since
	changes-since=changes-since
	recover=recover
	today = changes-since 12hours
	run = "!run-command-on-git-revisions"

[color]
	ui = true

[color "diff"]
	whitespace = red reverse

[diff]
	tool = vimdiff
	algorithm = patience
[merge]
	ff = false
	conflictstyle = diff3
[pull]
	ff = only
[init]
	templatedir = ~/.git_template
[rerere]
	enabled = 1
[url "git@github.com:"]
	insteadOf = https://github.com/
