[user]
	name = Bob Whitelock
	email = "(none)"

[core]
	editor = vim
	pager = less -FRSX
	excludesfile = ~/.gitignore

[push]
	default = current

[credential]
	helper = cache --timeout=3600

[alias]
	amend = commit --amend -C HEAD
	sed = ! git grep -z --full-name -l '.' | xargs -0 sed -i -e
	home = config user.email 'bob.whitelock1@gmail.com'
	work = config user.email 'bob.whitelock@alces-software.com'
	fix-conflicts = ! $EDITOR $(git diff --name-only | uniq)
	pull-submodules = submodule foreach git pull
	snapshot = ! git stash save $(date) && git stash apply

[color]
	ui = true

[color "diff"]
	whitespace = red reverse
